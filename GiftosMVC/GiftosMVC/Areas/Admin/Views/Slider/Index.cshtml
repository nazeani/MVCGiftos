@model List<Slider>
@{
    int counter = 1;
}
<div class="container"> 
	<div class="row">
		<div class="col-12">
            <table class="table">
                <thead>
                    <tr><div> <a asp-action="Create" class="btn btn-outline-info">Create</a></div></tr>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">RedirectUrl</th>
                        <th scope="col">Image</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model)
                    {
                    <tr>
                        <th scope="row">@(counter++)</th>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.RedirectUrl</td>
                        <td><img src="~/uploads/sliders/@item.ImageUrl"/></td>
                        <td><a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-primary">Update</a></td>
                        <td><a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a></td>
                    </tr>
                    }
                </tbody>
            </table>
		</div>
	</div>
</div>